const leia = require('readline-sync');

let nome = leia.question("\nDigite seu nome: ").toUpperCase();
let idade = leia.questionInt("\nDigite sua idade: ");
let primeiraDoacao = leia.question("\nPrimeira doação de sangue? (true/false): ").toLowerCase() === 'true';

if (idade >= 18 && idade <= 59) {
    console.log(`\n${nome}, você está apto para doar sangue.`);
} else if (idade >= 60 && idade <= 69 && !primeiraDoacao) {
    console.log(`\n${nome}, você está apto para doar sangue.`);
} else {
    console.log(`\n${nome}, você não está apto para doar sangue.`);
}


