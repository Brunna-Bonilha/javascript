const leia = require("readline-sync")

let num;
let pares = 0;
let impares = 0;

for(let i = 1; i <= 10; i++) {
    num = parseInt(leia.question(`Digite o ${i}ยบ numero: `));

if (num % 2 === 0) {
         pares++;
} else {
         impares++;
}
}

console.log(`Total de numeros pares: ${pares}`);
console.log(`Total de numeros impares: ${impares}`);

